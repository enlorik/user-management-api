<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define properties -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="user-management-api"/>
    
    <!-- Console appender for development with JSON formatting -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Enable structured JSON output -->
            <includeMdc>true</includeMdc>
            <includeContext>true</includeContext>
            <includeCallerData>true</includeCallerData>
            
            <!-- Custom field names for better readability -->
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <message>message</message>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <levelValue>[ignore]</levelValue>
            </fieldNames>
            
            <!-- Add custom fields -->
            <customFields>{"application":"${APP_NAME}"}</customFields>
            
            <!-- Mask sensitive information in logs -->
            <jsonGeneratorDecorator class="net.logstash.logback.mask.MaskingJsonGeneratorDecorator">
                <defaultMask>****MASKED****</defaultMask>
                <!-- Mask password fields -->
                <path>password</path>
                <path>*.password</path>
                <path>**.password</path>
                <!-- Mask other sensitive fields -->
                <path>passwordHash</path>
                <path>*.passwordHash</path>
                <path>**.passwordHash</path>
                <path>rawPassword</path>
                <path>*.rawPassword</path>
                <path>**.rawPassword</path>
                <path>token</path>
                <path>*.token</path>
                <path>apiKey</path>
                <path>*.apiKey</path>
                <path>authorization</path>
                <path>*.authorization</path>
            </jsonGeneratorDecorator>
        </encoder>
    </appender>
    
    <!-- Console appender for human-readable output (for local development) -->
    <appender name="CONSOLE_PLAIN" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File appender for production with JSON formatting -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/user-management-api.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/user-management-api.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdc>true</includeMdc>
            <includeContext>true</includeContext>
            <includeCallerData>true</includeCallerData>
            
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <message>message</message>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <levelValue>[ignore]</levelValue>
            </fieldNames>
            
            <customFields>{"application":"${APP_NAME}"}</customFields>
            
            <!-- Mask sensitive information in logs -->
            <jsonGeneratorDecorator class="net.logstash.logback.mask.MaskingJsonGeneratorDecorator">
                <defaultMask>****MASKED****</defaultMask>
                <path>password</path>
                <path>*.password</path>
                <path>**.password</path>
                <path>passwordHash</path>
                <path>*.passwordHash</path>
                <path>**.passwordHash</path>
                <path>rawPassword</path>
                <path>*.rawPassword</path>
                <path>**.rawPassword</path>
                <path>token</path>
                <path>*.token</path>
                <path>apiKey</path>
                <path>*.apiKey</path>
                <path>authorization</path>
                <path>*.authorization</path>
            </jsonGeneratorDecorator>
        </encoder>
    </appender>
    
    <!-- Spring profile: local (human-readable console logs) -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE_PLAIN"/>
        </root>
        <logger name="com.empress.usermanagementapi" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>
    </springProfile>
    
    <!-- Spring profile: default/production (JSON console logs) -->
    <springProfile name="!local">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="FILE_JSON"/>
        </root>
        <logger name="com.empress.usermanagementapi" level="INFO"/>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
    </springProfile>
    
</configuration>
